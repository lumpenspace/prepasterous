{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "jsx": "react",
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "typeRoots": [ "node_modules/@types" ]

  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/content.ts"],
}